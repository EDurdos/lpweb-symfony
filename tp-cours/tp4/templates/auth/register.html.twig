{% extends 'base.html.twig' %}

{% block title %}Création d'un utilisation{% endblock %}

{% block body %}
<div class="container">
    <h1>Création d'un utilisation</h1>

    <div class="my-4"> 
        {{ form_start(userForm) }}
            <div class="form-group">
                <label for="register_email">Email</label>
                {{ form_widget(userForm.email) }}
                <small class="text-danger">
                    {{ form_errors(userForm.email) }}
                </small>
            </div>

            <div class="form-group">
                <label for="register_password">Mot de passe</label>
                {{ form_widget(userForm.password) }}
                <small class="text-danger">
                    {{ form_errors(userForm.password) }}
                </small>
            </div>

            <div class="form-group">
                <label for="register_confirm_password">Confirmation du mot de passe</label>
                {{ form_widget(userForm.confirm_password) }}
                <small class="text-danger">
                    {{ form_errors(userForm.confirm_password) }}
                </small>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                Créer
            </button>
        {{ form_end(userForm) }}
    </div>
</div>
{% endblock %}
