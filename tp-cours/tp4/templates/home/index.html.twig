{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container">
    <h1>Accueil</h1>
    
    <div class="row">
        <div class="my-3 col-md">
            <h3>Articles les plus aimés</h3>
            <div class="list-group">
            {% for article in mostLikedArticles %}
                <a href="{{ path('article.show', {id : article.id}) }}" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ article.title }}</h5>
                        <small style="color: green">{{ article.likes }}</small>
                    </div>
                    <p class="mb-1">{{ article.content | slice(0, 100) }}</p>
                    <small>
                        Créé par {{ article.author }}
                        le {{ article.createdAt | date('d/m/Y') }} 
                        à {{ article.createdAt | date('H:i:s') }}
                    </small>
                </a>
            {% endfor %}
            </div>
        </div>

        <div class="my-3 col-md"> 
            <h3>Articles les plus récents</h3>
            <div class="list-group">
            {% for article in mostRecentArticles %}
                <a href="{{ path('article.show', {id : article.id}) }}" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ article.title }}</h5>
                        <small style="color: green">{{ article.likes }}</small>
                    </div>
                    <p class="mb-1">{{ article.content | slice(0, 100) }}</p>
                    <small>
                        Créé par {{ article.author }}
                        le {{ article.createdAt | date('d/m/Y') }} 
                        à {{ article.createdAt | date('H:i:s') }}
                    </small>
                </a>
            {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
